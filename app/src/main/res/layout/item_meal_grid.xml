<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/mealThumbnail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spacer"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/mealThumbnail"
        app:layout_constraintEnd_toStartOf="@id/mealThumbnail" />

    <TextView
        android:id="@+id/mealTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#DDDDDD"
        android:padding="5dp"
        android:paddingEnd="5dp"
        android:text="Targeted Killings Are Terrorizing Afghans. And No One Is Claiming Them."
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mealThumbnail"
        app:layout_constraintStart_toStartOf="parent" />


    <CheckBox
        android:id="@+id/isFavorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:button="@drawable/ic_favorite_button"
        android:buttonTint="@color/colorFavoriteButton"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/mealThumbnail"
        app:layout_constraintTop_toTopOf="@+id/mealThumbnail" />

</androidx.constraintlayout.widget.ConstraintLayout>
