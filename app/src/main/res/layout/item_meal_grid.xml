<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mealLayout"
    android:padding="4dp">

    <ImageView
        android:id="@+id/mealThumbnail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spacer"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/mealThumbnail"
        app:layout_constraintEnd_toStartOf="@id/mealThumbnail" />

    <TextView
        android:padding="5dp"
        android:id="@+id/mealTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:text="Targeted Killings Are Terrorizing Afghans. And No One Is Claiming Them."
        android:paddingEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mealThumbnail"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:rotation="-5"
        android:rotationX="0"
        android:rotationY="0"
        android:text="â—¤"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="85sp"
        app:layout_constraintStart_toStartOf="@id/spacer"
        app:layout_constraintTop_toTopOf="@id/spacer" />

    <CheckBox
        android:id="@+id/isFavorite"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="27dp"
        android:buttonTint="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:button="@drawable/ic_favorite_button"
        app:layout_constraintStart_toStartOf="@+id/spacer"
        app:layout_constraintTop_toTopOf="@+id/spacer" />

</androidx.constraintlayout.widget.ConstraintLayout>
